<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:layout="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    android:id="@+id/call_cv"

    >

  <include
      layout="@layout/vertical_stepper"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
     >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/call_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_call_black_24dp"
                android:tint="@android:color/holo_green_light"/>

            <TextView
                android:id="@+id/call_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:textSize="10sp"
                android:text="TextView" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/call_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:layout_marginRight="4dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/call_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@id/call_person"

                android:text="TextView" />
            <TextView
                android:id="@+id/call_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/call_person"

                android:text="TextView" />
            <TextView
            android:id="@+id/call_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/call_duration"

            android:text="TextView" />


            <Button
                android:id="@+id/call_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:textColor="@android:color/holo_green_light"
                android:textStyle="bold"
                android:text="Button"
                />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
