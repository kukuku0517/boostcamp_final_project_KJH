<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/sms_group_cv"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@android:color/holo_orange_light">

            <ImageView
                android:id="@+id/sms_group_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_email_black_24dp" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sms_group_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/sms_group_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sms_group_date"
                android:text="TextView" />

            <!--<TextView-->
                <!--android:id="@+id/sms_group_number"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->

                <!--android:layout_below="@id/sms_group_person"-->

                <!--android:text="TextView" />-->

            <TextView
                android:id="@+id/sms_group_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sms_group_person"
                android:layout_marginTop="10dp"
                android:text="댓글을 입력하세요"

                android:visibility="visible" />


            <Button
                android:id="@+id/sms_group_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:textColor="@android:color/holo_orange_light"
                android:textStyle="bold"
                android:text="Button" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
