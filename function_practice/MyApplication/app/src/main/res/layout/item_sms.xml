<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sms_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@android:color/holo_orange_light">

            <ImageView
                android:id="@+id/sms_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person_black_24dp"
                android:layout_gravity="center_vertical"
                />



        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/sms_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:text="TextView" />

            <TextView
                android:id="@+id/sms_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/sms_person"

                android:text="TextView" />

            <TextView
                android:id="@+id/sms_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sms_number"
                android:text=""

                android:visibility="visible" />
            <TextView
                android:id="@+id/sms_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sms_content"
                android:text="d"

                android:visibility="visible" />




            <Button
                android:id="@+id/sms_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:textColor="@android:color/holo_orange_light"
                android:textStyle="bold"
                android:text="Comment" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
